{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register' }}) }}



<div class="form-group">
    {% for errorItem in form.email.vars.errors %}
        <label class="control-label has-error alert-danger" for="{{ form.email.vars.id }}">{{ errorItem.message }}</label>
    {% endfor %}
    {{ form_widget(form.email, {'attr': {'class': 'form-control input-lg', 'placeholder': 'Enter Email', 'required': 'required' }}
    ) }}
</div>


<div class="form-group">
    {{ form_widget(form.username, {'attr': {'class': 'form-control input-lg', 'placeholder': 'Enter User Name', 'required': 'required' }}
    ) }}
</div>


<div class="form-group">
    {% for errorItem in form.plainPassword.first.vars.errors %}
        <label class="control-label has-error alert-danger" for="{{ form.plainPassword.vars.id }}">{{ errorItem.message }}</label>
    {% endfor %}
    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control input-lg', 'placeholder': 'Enter password', 'required': 'required' }}
    ) }}
</div>

<div class="form-group">
    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control input-lg', 'placeholder': 'Enter password again', 'required': 'required' }}
    ) }}
</div>

<div class="form-group">
    {{ form_widget(form.fullName, {'attr': {'class': 'form-control input-lg', 'placeholder': 'Enter Full Name', 'required': 'required' }}
    ) }}
</div>


<div class="row col-md-offset-4">
    <div class="mbr-buttons mbr-buttons--right"><button type="submit" id="_submit" name="_submit" class="mbr-buttons__btn btn btn-lg btn-info">{{ 'registration.submit'|trans }}</button></div>
</div>
{{ form_end(form) }}
